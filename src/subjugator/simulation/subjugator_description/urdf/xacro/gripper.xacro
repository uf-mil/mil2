<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="mil_gripper" params="name parent xyz rpy">
    <!-- Gripper Base Link -->
    <link name="${name}_link">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1.0"/>
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <!-- Visual for base -->
      <visual name="${name}_base_visual">
        <geometry>
          <mesh filename="package://subjugator_description/models/gripper_2025/gripper_base.dae"/>
        </geometry>
      </visual>
      <!-- Collision for base -->
      <collision>
        <geometry>
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </collision>
    </link>

    <!-- Left Arm Link  -->
    <link name="${name}_armLeft_link">
      <inertial>
        <origin xyz="0 0.025 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <!-- Left Arm Visual Link -->
      <visual name="${name}_armLeft_visual">
        <origin xyz="0 0.025 -0.3" rpy="1.57 0 -1.57"/>
        <geometry>
          <mesh filename="package://subjugator_description/models/gripper_2025/gripper_arm.dae"/>
        </geometry>
      </visual>
      <!-- Left Arm Collision -->
      <!-- <collision>
        <origin xyz="0 0.025 -0.3" rpy="1.57 0 -1.57"/>
        <geometry>
          <mesh filename="package://subjugator_description/models/gripper_2025/gripper_arm.dae"/>
        </geometry>
      </collision> -->
    </link>
    <!-- Left Arm Joint -->
    <joint name="${name}_armLeft_joint" type="revolute">
      <origin xyz="0 0.025 0" rpy="0 0 0"/>
      <parent link="${name}_link"/>
      <child link="${name}_armLeft_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1.0" velocity="1.0" lower="0.0" upper="0.5"/>
    </joint>

    <!-- Right Arm Link -->
    <link name="${name}_armRight_link">
      <inertial>
        <origin xyz="0 -0.025 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <!-- Right Arm Visual Link -->
      <visual name="${name}_armRight_visual">
        <origin xyz="0 -0.025 -0.3" rpy="1.57 0 1.57"/>
        <geometry>
          <mesh filename="package://subjugator_description/models/gripper_2025/gripper_arm.dae"/>
        </geometry>
      </visual>
      <!-- Right Arm Collision -->
      <!-- <collision>
        <origin xyz="0 -0.025 -0.3" rpy="1.57 0 1.57"/>
        <geometry>
          <mesh filename="package://subjugator_description/models/gripper_2025/gripper_arm.dae"/>
        </geometry>
      </collision> -->
    </link>
    <!-- Right Arm Joint -->
    <joint name="${name}_armRight_joint" type="revolute">
      <origin xyz="0 -0.025 0" rpy="0 0 0"/>
      <parent link="${name}_link"/>
      <child link="${name}_armRight_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1.0" velocity="1.0" lower="0.0" upper="0.5"/>
    </joint>

    <!-- Fixed Joint to Parent -->
    <joint name="${name}_joint" type="fixed">
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
    </joint>

    <gazebo reference="${name}_joint">
      <disableFixedJointLumping>true</disableFixedJointLumping>
      <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
  </xacro:macro>
</robot>
